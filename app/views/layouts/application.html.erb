<!DOCTYPE html>
<html>
  <head>
    <title>DS13</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
    <div class="cabecera">
      <span class="enlace_panel"><%= link_to "Coveets", :coveets %></span>
      <span class="enlace_panel"><%= link_to "Panel de control", root_path %></span>
      <span class="enlace_panel"><%= image_tag "logo.png", :size => "100x100"%></span>
      <span class="enlace_panel"><%= link_to "Usuarios", :usuarios %></span>
      <span class="enlace_panel"><%= link_to "Administradores", :administradors %></span>
    </div>

    <div id="fila_principal">
      <div id="contenedor_principal">
        <%= yield %>
      </div>
    </div>
    <% else %>
    <div class="cabecera">
      <span class="enlace_panel"><%= image_tag "logo.png", :size => "100x100"%></span>
    </div>

      <%= render :template => "sessions/new" %>
    <% end %>
  </body>

  <% yield :navigation %>

  <%#= link_to "Panel de control", root_path %>
  <%#= link_to "Usuarios", :usuarios %>
  <%#= link_to "Coveets", :coveets %>
  <%#= link_to "Administradors", :administradors %>

  <%# content_for :navigation do %>

  <%# end %>
</html>
